    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "{% if page.url == '/tns/' %}NewsWebsite{% else %}NewsArticle{% endif %}",
        "headline": "{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %}",
        "description": "{% if meta_description %}{{ meta_description }}{% else %}{{ description }}{% endif %}",
        "datePublished": "{{ date }}",
        "dateModified": "{{ date }}",
        "author": {
            "@type": "Organization",
            "name": "తెలుగు వార్తలు"
        },
        "publisher": {
            "@type": "Organization",
            "name": "తెలుగు వార్తలు",
            "logo": {
                "@type": "ImageObject",
                "url": "{{ '/tns/images/logo.png' | absoluteUrl }}"
            }
        },
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "{{ page.url | absoluteUrl }}"
        }
        {% if image %},
        "image": {
            "@type": "ImageObject",
            "url": "{{ image | absoluteUrl }}",
            "width": 1200,
            "height": 630
        }
        {% endif %}
    }
    </script>


