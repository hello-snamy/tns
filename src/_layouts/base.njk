    <!-- SEO Meta Tags -->
    <meta property="og:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %}">
    <meta property="og:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ description }}{% endif %}">
    <meta property="og:type" content="article">
    <meta property="og:locale" content="te_IN">

    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ page.url | absoluteUrl }}">


    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %}">
    <meta property="og:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ description }}{% endif %}">
    <meta property="og:type" content="{% if page.url == '/tns/' %}website{% else %}article{% endif %}">
    <meta property="og:url" content="{{ page.url | absoluteUrl }}">
    <meta property="og:locale" content="te_IN">
    <meta property="og:site_name" content="తెలుగు వార్తలు">
    
    {% if image %}
    <meta property="og:image" content="{{ image | absoluteUrl }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:type" content="image/jpeg">
    {% else %}
    <meta property="og:image" content="{{ '/tns/images/og-default.jpg' | absoluteUrl }}">
    {% endif %}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %}">
    <meta name="twitter:description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ description }}{% endif %}">
    <meta name="twitter:site" content="@TeluguNews">
    <meta name="twitter:creator" content="@TeluguNews">

    {% if image %}
    <meta name="twitter:image" content="{{ image | absoluteUrl }}">
    {% else %}
    <meta name="twitter:image" content="{{ '/tns/images/twitter-default.jpg' | absoluteUrl }}">
    {% endif %}
    
