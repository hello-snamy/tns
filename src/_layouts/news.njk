---
layout: base
---

<article class="news-article">
    <!-- Article Header -->
    <header class="article-header bg-light py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ '/' | url }}" class="text-decoration-none">
                                <i class="bi bi-house me-1"></i>హోమ్
                            </a></li>
                            <li class="breadcrumb-item"><a href="{{ '/news/' | url }}" class="text-decoration-none">వార్తలు</a></li>
                            {% if categories %}
                            <li class="breadcrumb-item active text-capitalize">{{ categories[0] }}</li>
                            {% endif %}
                        </ol>
                    </nav>

                    <!-- Article Title -->
                    <h1 class="article-title display-4 fw-bold text-dark mb-4">{{ title }}</h1>

                    <!-- Article Meta -->
                    <div class="article-meta d-flex flex-wrap align-items-center gap-4 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar3 text-primary me-2"></i>
                            <time datetime="{{ date | isoDate }}" class="text-muted">{{ date | readableDate }}</time>
                        </div>
                        
                        {% if categories %}
                        <div class="d-flex align-items-center">
                            <i class="bi bi-tag text-primary me-2"></i>
                            <div class="categories">
                                {% for category in categories %}
                                <a href="{{ '/categories/' | url }}{{ category }}/" class="badge bg-primary text-decoration-none me-1 text-capitalize">
                                    {{ category }}
                                </a>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        
                        <div class="d-flex align-items-center">
                            <i class="bi bi-clock text-primary me-2"></i>
                            <span class="text-muted">5 నిమిషాల చదవడం</span>
                        </div>
                    </div>

                    <!-- Featured Image -->
                    {% if image %}
                    <div class="article-featured-image mb-4">
                        <img src="{{ image | url }}" alt="{{ title }}" class="img-fluid rounded-3 shadow-lg w-100" style="max-height: 500px; object-fit: cover;">
                        {% if image_caption %}
                        <div class="text-center text-muted mt-2 small">{{ image_caption }}</div>
                        {% endif %}
                    </div>
                    {% endif %}

                    <!-- Article Description -->
                    {% if description %}
                    <div class="article-description lead text-muted mb-4 p-4 bg-white rounded-3 border">
                        <i class="bi bi-quote me-2 text-primary"></i>
                        {{ description }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>

    <!-- Article Content -->
    <section class="article-content py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="content-body fs-5 lh-lg">
                        {{ content | safe }}
                    </div>
                </div>
                
                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Author Info -->
                    <div class="author-card card border-0 shadow-sm mb-4">
                        <div class="card-body text-center">
                            <div class="author-avatar mb-3">
                                <i class="bi bi-person-circle display-4 text-primary"></i>
                            </div>
                            <h6 class="card-title fw-bold">తెలుగు వార్తలు రిపోర్టర్</h6>
                            <p class="card-text text-muted small">విశేష వార్తా విలేఖరి</p>
                            <div class="author-social">
                                <a href="#" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-linkedin"></i>
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-envelope"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Share Widget -->
                    <div class="share-widget card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-share me-2"></i>షేర్ చేయండి
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="share-buttons d-grid gap-2">
                                <button class="btn btn-facebook btn-sm">
                                    <i class="bi bi-facebook me-2"></i>Facebook
                                </button>
                                <button class="btn btn-twitter btn-sm">
                                    <i class="bi bi-twitter me-2"></i>Twitter
                                </button>
                                <button class="btn btn-whatsapp btn-sm">
                                    <i class="bi bi-whatsapp me-2"></i>WhatsApp
                                </button>
                                <button class="btn btn-link btn-sm" onclick="copyArticleLink()">
                                    <i class="bi bi-link-45deg me-2"></i>లింక్ కాపీ
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Related Articles -->
                    {% set relatedPosts = collections.news | filterByCategory(categories[0]) | excludeCurrent(url) | slice(0, 3) %}
                    {% if relatedPosts.length > 0 %}
                    <div class="related-articles card border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="bi bi-newspaper me-2"></i>సంబంధిత వార్తలు
                            </h6>
                        </div>
                        <div class="card-body">
                            {% for post in relatedPosts %}
                            <div class="related-item mb-3 pb-3 {% if not loop.last %}border-bottom{% endif %}">
                                <h6 class="related-title mb-2">
                                    <a href="{{ post.url | url }}" class="text-decoration-none text-dark small">
                                        {{ post.data.title }}
                                    </a>
                                </h6>
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    {{ post.date | readableDate }}
                                </small>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <!-- Article Footer -->
    <footer class="article-footer py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!-- Tags -->
                    {% if categories %}
                    <div class="tags-section mb-4">
                        <h6 class="fw-bold mb-3">
                            <i class="bi bi-tags me-2"></i>ట్యాగ్లు
                        </h6>
                        <div class="tags">
                            {% for category in categories %}
                            <a href="{{ '/categories/' | url }}{{ category }}/" class="btn btn-outline-secondary btn-sm me-2 mb-2 text-capitalize">
                                #{{ category }}
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}

                    <!-- Navigation -->
                    <div class="article-navigation d-flex justify-content-between align-items-center pt-4 border-top">
                        <div>
                            <a href="{{ '/news/' | url }}" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-2"></i>తిరిగి వార్తలకు
                            </a>
                        </div>
                        <div class="social-share-mobile d-lg-none">
                            <button class="btn btn-primary btn-sm" onclick="shareArticle()">
                                <i class="bi bi-share me-1"></i>షేర్
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</article>

<!-- Newsletter Subscription -->
<section class="newsletter-cta py-5 bg-primary text-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h4 class="fw-bold mb-3">తాజా వార్తలను మిస్ చేయకండి</h4>
                <p class="mb-4">రోజువారీ తెలుగు వార్తలు మీ ఇన్బ�ాక్స్‌లో పొందండి</p>
                <form class="newsletter-form">
                    <div class="input-group input-group-lg">
                        <input type="email" class="form-control" placeholder="మీ ఈమెయిల్ చిరునామా" required>
                        <button class="btn btn-light text-primary" type="submit">
                            <i class="bi bi-send me-2"></i>చందా పొందండి
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
function copyArticleLink() {
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
        // Show success message
        const btn = event.target;
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check2 me-2"></i>కాపీ అయ్యింది!';
        setTimeout(() => {
            btn.innerHTML = originalText;
        }, 2000);
    });
}

function shareArticle() {
    if (navigator.share) {
        navigator.share({
            title: '{{ title }}',
            text: '{{ description }}',
            url: window.location.href,
        })
        .catch(console.error);
    } else {
        copyArticleLink();
    }
}

// Social sharing functions
document.addEventListener('DOMContentLoaded', function() {
    // Facebook Share
    document.querySelector('.btn-facebook')?.addEventListener('click', function() {
        const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}`;
        window.open(url, '_blank', 'width=600,height=400');
    });

    // Twitter Share
    document.querySelector('.btn-twitter')?.addEventListener('click', function() {
        const text = `{{ title }} - తెలుగు వార్తలు`;
        const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(window.location.href)}`;
        window.open(url, '_blank', 'width=600,height=400');
    });

    // WhatsApp Share
    document.querySelector('.btn-whatsapp')?.addEventListener('click', function() {
        const text = `{{ title }}\n\n{{ description }}\n\n${window.location.href}`;
        const url = `https://wa.me/?text=${encodeURIComponent(text)}`;
        window.open(url, '_blank');
    });

    // Newsletter form
    const newsletterForms = document.querySelectorAll('.newsletter-form');
    newsletterForms.forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('input[type="email"]').value;
            const button = this.querySelector('button[type="submit"]');
            
            if (email) {
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>సబ్మిట్ అవుతోంది...';
                button.disabled = true;
                
                setTimeout(() => {
                    button.innerHTML = '<i class="bi bi-check2 me-2"></i>సబ్‌స్క్రైబ్ చేయబడింది!';
                    this.reset();
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }, 2000);
                }, 1000);
            }
        });
    });
});
</script>
