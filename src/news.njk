---
layout: base
title: అన్ని వార్తలు
---

<section class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 fw-bold text-primary mb-4">అన్ని వార్తలు</h1>
        </div>
    </div>
    
    <div class="row">
        {% for post in collections.news %}
        <div class="col-lg-6 mb-4">
            <div class="card news-card h-100 border-0 shadow-sm">
                <div class="row g-0 h-100">
                    {% if post.data.image %}
                    <div class="col-md-4">
                        <img src="{{ post.data.image | url }}" class="img-fluid rounded-start h-100" alt="{{ post.data.title }}" style="object-fit: cover;">
                    </div>
                    {% endif %}
                    <div class="col-md-{% if post.data.image %}8{% else %}12{% endif %}">
                        <div class="card-body d-flex flex-column h-100">
                            <h5 class="card-title">
                                <a href="{{ post.url | url }}" class="text-decoration-none text-dark">{{ post.data.title }}</a>
                            </h5>
                            <p class="card-text text-muted small flex-grow-1">{{ post.data.description | truncate(100) }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    {{ post.date | readableDate }}
                                </small>
                                {% if post.data.categories %}
                                <span class="badge bg-primary small">{{ post.data.categories[0] }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
